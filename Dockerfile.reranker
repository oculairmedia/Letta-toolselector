# Dockerfile for Ollama Reranker Adapter
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-reranker.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-reranker.txt

# Copy application code
COPY ollama_reranker_adapter.py .

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the application
CMD ["uvicorn", "ollama_reranker_adapter:app", "--host", "0.0.0.0", "--port", "8080"]